// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Profile {
  username String @id
  wins Int @default(0)
  losses Int @default(0) 
  public Boolean @default(false)

  @@index(username)
}