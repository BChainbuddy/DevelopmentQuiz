datasource db {
  provider  = "postgresql"
  url  	    = env("devquiz_DATABASE_URL")
}

model Profile {
  username  String      @id
  public    Boolean     @default(false)
  userGames UserGames[]
}

model UserGames {
  id           Int      @id @default(autoincrement())
  userId       String
  categoryName String   
  wins         Int      @default(0)
  losses       Int      @default(0)

  profile      Profile  @relation(fields: [userId], references: [username])
}
